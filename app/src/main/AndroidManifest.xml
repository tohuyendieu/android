<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fptu.ninhtbm.thebookshop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheBookshop">
        <activity
            android:name=".ui.listbook.SearchBookActivity"
            android:exported="true" />
        <activity
            android:name=".ui.listbook.ListBookActivity"
            android:exported="true" />
        <activity
            android:name=".ui.forgotpassword.ForgotPasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.changepassword.ChangePasswordActivity"
            android:exported="true" />
        <activity
            android:name=".ui.bookdetail.BookDetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.FirestoreActivity"
            android:exported="true" />
        <activity
            android:name=".ui.account.AccountActivity"
            android:exported="true" />
        <activity
            android:name=".ui.signup.SignUpActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".ui.checkout.CheckoutActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.cart.CartActivity"
            android:exported="true" />
        <activity
            android:name=".ui.base.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.home.MainActivity"
            android:exported="true" />
    </application>

</manifest>